{
  "compilerOptions": {
    // Modern Node settings
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    // Output
    "outDir": "./dist",
    "rootDir": "../",
    // Safety Checks
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // This allows us to import from the '../shared' folder
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../shared/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}